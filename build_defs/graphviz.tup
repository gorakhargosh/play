DOT = dot


# ------------------------------------------------------------------------------
# DOT Graph PNG build definitions.
# ------------------------------------------------------------------------------
DOT_PNG_FLAGS += -Tpng

!dot_png = |> ^ [DOT :png] %o ^ $(DOT) $(DOT_FLAGS) $(DOT_PNG_FLAGS) "%f" -o "%o"  |>


# ------------------------------------------------------------------------------
# DOT Graph SVG build definitions.
# ------------------------------------------------------------------------------
DOT_SVG_FLAGS += -Tsvg

!dot_svg = |> ^ [DOT :svg] %o ^ $(DOT) $(DOT_FLAGS) $(DOT_SVG_FLAGS) "%f" -o "%o"  |>
